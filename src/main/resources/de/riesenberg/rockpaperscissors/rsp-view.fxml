<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<GridPane fx:controller="de.riesenberg.rockpaperscissors.controller.RSPController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <Button text="Hello!" onAction="#onHelloButtonClick" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <Button text="Neues Spiel!" onAction="#onHelloButtonClick" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

</GridPane>