<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane fx:id="mainWindow"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="de.riesenberg.rockpaperscissors.view.CreateView"
            prefHeight="400.0" prefWidth="600.0">
    <VBox alignment="CENTER">
        <TextField fx:id="gameName" alignment="CENTER" maxWidth="1.7976931348623157E308"/>
        <TextField fx:id="gamePassword" alignment="CENTER" maxWidth="1.7976931348623157E308"/>
        <HBox>
            <Button fx:id="leave"
                    onAction="#onLeave" text="Verlassen" prefWidth="200"
                    prefHeight="120" maxWidth="-Infinity"/>
            <Button fx:id="create"
                    onAction="#onCreate" text="Erstellen" prefWidth="200"
                    prefHeight="120" maxWidth="-Infinity"/>
        </HBox>
    </VBox>
</AnchorPane>
