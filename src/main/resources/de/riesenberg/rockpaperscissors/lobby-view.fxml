<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.stage.Screen?>
<AnchorPane fx:id="mainWindow" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="${screen.visualBounds.height}" prefWidth="${screen.visualBounds.width}"
            style="-fx-background-color: #ffffff;"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="de.riesenberg.rockpaperscissors.view.LobbyView">
    <fx:define>
        <Screen fx:factory="getPrimary" fx:id="screen"/>
    </fx:define>

    <BorderPane>
        <center>
            <TableView fx:id="lobbyTable" BorderPane.alignment="CENTER"
                       prefHeight="${screen.visualBounds.height}"
                       prefWidth="${screen.visualBounds.width}">
                <columns>
                    <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Name"/>
                    <TableColumn fx:id="passwordRequiredColumn" prefWidth="75.0" text="Passwort benÃ¶tigt"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </center>
        <bottom>
            <HBox>
                    <GridPane prefHeight="150" prefWidth="800" alignment="CENTER" hgap="10" vgap="10">
                        <children>
                            <Button fx:id="leave"
                                    onAction="#onLeave" text="Spiel verlassen" prefWidth="200"
                                    prefHeight="120" maxWidth="-Infinity" GridPane.columnIndex="1"/>
                            <Button fx:id="join" onAction="#onJoin"
                                    text="Spiel beitreten" prefWidth="200" prefHeight="120" maxWidth="-Infinity"
                                    GridPane.columnIndex="2"/>
                            <Button fx:id="create" onAction="#onCreate"
                                    text="Spiel erstellen" prefWidth="200" prefHeight="120" maxWidth="-Infinity"
                                    GridPane.columnIndex="3"/>
                        </children>
                    </GridPane>
            </HBox>
        </bottom>
    </BorderPane>
</AnchorPane>
