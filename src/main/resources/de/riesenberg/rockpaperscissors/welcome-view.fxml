<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<?import javafx.stage.Screen?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="de.riesenberg.rockpaperscissors.controller.WelcomeController"
            maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity"
            minWidth="-Infinity"
            style="-fx-background-color: #ffffff;"
            prefHeight="${screen.visualBounds.height}" prefWidth="${screen.visualBounds.width}">
    <fx:define>
        <Screen fx:factory="getPrimary" fx:id="screen"/>
    </fx:define>
    <children>
        <VBox>
            <Label fx:id="welcomeText" BorderPane.alignment="TOP_RIGHT">
                <font>
                    <Font size="16"/>
                </font>
            </Label>
            <HBox spacing="10" alignment="CENTER">
                <Label fx:id="EMPTY" prefWidth="90"/>
                <Button text="Neues Spiel" onAction="#onStartButton" prefWidth="90"/>
                <Label fx:id="EMPTY2" prefWidth="90"/>
            </HBox>
        </VBox>

    </children>
</AnchorPane>
