<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<?import javafx.stage.Screen?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:id="welcomeWindow"
      alignment="CENTER"
      fx:controller="de.riesenberg.rockpaperscissors.view.WelcomeView"
      style="-fx-background-color: #ffffff;"
      prefHeight="${screen.visualBounds.height}" prefWidth="${screen.visualBounds.width}" spacing="25">
    <fx:define>
        <Screen fx:factory="getPrimary" fx:id="screen"/>
    </fx:define>
    <children>
        <Label fx:id="welcomeLabel" alignment="CENTER" textAlignment="CENTER" maxWidth="1.7976931348623157E308">
            <font>
                <Font size="18"/>
            </font>
        </Label>
        <VBox spacing="30" alignment="CENTER">
            <Button text="Neues Spiel gegen den Computer" onAction="#onStartButton" prefWidth="350" prefHeight="90"/>
            <Button text="Mehrspieler" onAction="#onStartButton" prefWidth="350" prefHeight="90"/>
        </VBox>
    </children>
</VBox>
